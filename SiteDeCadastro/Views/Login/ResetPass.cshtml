@model ResetPassModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";

}
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
</style>
<div class="container login-container">
    <div class="col-md-6">
        <h2 class="fw-bold text-center font-monospace">Redefinir Senha</h2>
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
            <script>
                setTimeout(() => {
                    $('.alert').hide('hide');
                }, 7000)
            </script>
        }
        <form asp-controller="Login" asp-action="SendLinktoResetPass" method="post">
            <div class="form-group mt-3">
                <label for="username" class="fw-bold">Usuário:</label>
                <input type="text" class="form-control" id="cmpUsername" placeholder="Digite seu nome de usuário" asp-for="Login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="form-group mt-3">
                <label for="email" class="fw-bold">E-Mail</label>
                <input type="email" class="form-control" id="cmpEmail" placeholder="Digite seu E-mail" asp-for="Email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Redefinir Senha</button>
                <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>