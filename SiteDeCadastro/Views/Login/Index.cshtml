@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";

}
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
</style>
<div class="container login-container">
    <div class="col-md-6">
        <h2 class="fw-bold text-center font-monospace">Login</h2>
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
            <script>
                setTimeout(() => {
                    $('.alert').hide('hide');
                }, 7000)
            </script>
        }
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>
            <script>
                setTimeout(() => {
                    $('.alert').hide('hide');
                }, 7000)
            </script>
        }
        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="form-group mt-3">
                <label for="username" class="fw-bold">Usuário:</label>
                <input type="text" class="form-control" id="cmpUsername" placeholder="Digite seu nome de usuário" asp-for="Login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="form-group mt-3">
                <label for="password" class="fw-bold">Senha:</label>
                <input type="password" class="form-control" id="cmpPassword" placeholder="Digite sua senha" asp-for="Password">
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>
                <a class="text-primary  fw-bold" asp-controller="Login" asp-action="ResetPass">Esqueci Minha Senha!</a>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Login</button>
               @*  <button type="button" class="btn btn-secondary">Criar Conta</button> *@
            </div>
        </form>
    </div>
</div>