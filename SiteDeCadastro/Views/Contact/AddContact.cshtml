@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contatos";
}

<div class="Container">
    <div class="text-center mb-4">
        <h1 class="display-1">Cadastrar Contato</h1>
    </div>
    <form asp-controller="Contact" asp-action="AddContact" method="post">
        <div>
            <div class="mb-3">
                <label for="CmpNome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="CmpNome" placeholder="Digite o Nome do Contato" asp-for="Nome">
            </div>
            <div class="mb-3">
                <label for="CmpEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="CmpEmail" placeholder="Digite o Email do Contato" asp-for="Email">
            </div>
            <div class="mb-3">
                <label for="CmpCell" class="form-label">Celular</label>
                <input type="text" class="form-control" id="CmpCell" placeholder="Digite o Celular do Contato" asp-for="Celular">
            </div>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success" role="button">Adicionar</button>
            <a class="btn btn-secondary" role="button" asp-controller="Contact" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
