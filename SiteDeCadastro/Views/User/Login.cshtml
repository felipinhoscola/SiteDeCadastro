
@{
    ViewData["Title"] = "Login";
    TempData["Lock"] = true;
}
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
</style>
<div class="container login-container">
    <div class="col-md-6">
        <h2 class="fw-bold text-center font-monospace">Login</h2>
        <form>
            <div class="form-group">
                <label for="username" class="fw-bold">Usuário:</label>
                <input type="text" class="form-control" id="username" placeholder="Digite seu nome de usuário">
            </div>
            <div class="form-group">
                <label for="password" class="fw-bold">Senha:</label>
                <input type="password" class="form-control" id="password" placeholder="Digite sua senha">
            </div>
            <div class="">

            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <button type="button" class="btn btn-secondary">Criar Conta</button>
        </form>
    </div>
</div>