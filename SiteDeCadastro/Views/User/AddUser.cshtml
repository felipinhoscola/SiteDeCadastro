@model UserModel
@{
    ViewData["Title"] = "Cadastrar Usuários";
}

<div class="Container">
    <div class="text-center mb-4">
        <h1 class="display-1">Cadastrar Usuário</h1>
    </div>
    <form asp-controller="User" asp-action="AddUser" method="post">
        <div>
            <div class="mb-3">
                <label for="CmpNome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="CmpNome" placeholder="Digite o Nome do Usuário" asp-for="Name">
                @Html.ValidationMessageFor(x=>x.Name)
                @*Função para mostrar mensagem do erro da validação, mensagem vem do contato model, nome da classe caso for mexer no estilo é
                field-validation-error
                *@
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="CmpLogin" class="form-label">Login</label>
                        <input type="text" class="form-control" id="CmpLogin" asp-for="Login">
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="CmpPassword" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="CmpPassword" asp-for="Password">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="CmpEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="CmpEmail" placeholder="Digite o Email do Usuário" asp-for="Email">
                @Html.ValidationMessageFor(x=>x.Email)
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="perfilNormal" name="perfil" value="0" asp-for="Perfil" checked>
                    <label class="form-check-label" for="perfilNormal">Perfil Usuário Normal</label>
                </div>

                <div class="form-check">
                    <input type="radio" class="form-check-input" id="perfilAdmin" name="perfil" value="1" asp-for="Perfil">
                    <label class="form-check-label" for="perfilAdmin">Perfil Usuário Admin</label>
                </div>
            </div>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success" role="button">Adicionar</button>
            <a class="btn btn-secondary" role="button" asp-controller="User" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
