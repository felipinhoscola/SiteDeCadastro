@model UserModel
@{
    ViewData["Title"] = "Editar Usuários";
}

<div class="Container">
    <div class="text-center mb-4">
        <h1 class="display-1">Editar Usuário</h1>
    </div>
    <form asp-controller="User" asp-action="EditUser" method="post">
        <div>
            <input type="hidden" asp-for="Id"/>
            <div class="mb-3">
                <label for="CmpNome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="CmpNome" placeholder="Digite o Nome do Contato" asp-for="Name">
                @Html.ValidationMessageFor(x=>x.Name)
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="CmpLogin" class="form-label">Login</label>
                        <input type="text" class="form-control" id="CmpLogin" asp-for="Login">
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="CmpPassword" class="form-label">Senha</label>
                        <input type="text" class="form-control" id="CmpPassword" asp-for="Password">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="CmpEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="CmpEmail" placeholder="Digite o Email do Contato" asp-for="Email">
                @Html.ValidationMessageFor(x=>x.Email)
            </div>
            <div class="mb-3">
                @if(Model.Perfil == 0){
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="perfilNormal" name="perfil" value="0" asp-for="Perfil" checked>
                        <label class="form-check-label" for="perfilNormal">Perfil Normal</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="perfilAdmin" name="perfil" value="1" asp-for="Perfil">
                        <label class="form-check-label" for="perfilAdmin">Perfil Admin</label>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="perfilNormal" name="perfil" value="0" asp-for="Perfil">
                        <label class="form-check-label" for="perfilNormal">Perfil Normal</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="perfilAdmin" name="perfil" value="1" asp-for="Perfil" checked>
                        <label class="form-check-label" for="perfilAdmin">Perfil Admin</label>
                    </div>
                }


                
            </div>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success" role="button">Atualizar</button>
            <a class="btn btn-secondary" role="button" asp-controller="User" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
